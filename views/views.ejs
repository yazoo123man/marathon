<h1>Score board</h1>
<table class="table table-striped table-hover"  align="center"">
  <thead>
    <tr>
      <th scope="col" class="left" style="width: 5%;">Position</th>
      <th scope="col">Catagory</th>
      <th scope="col">Pos</th>
      <th scope="col">Name</th>
      <th scope="col">Number</th>
      <th scope="col">Time</th>
    </tr>
  </thead>
  <tbody>
    <script>
      $(document).ready(function() {
        $('table tr').click(function() {
          window.location = $(this).attr('href');
          return false;
        });
      });
    </script>
    <% array.forEach(function(element){%>
    <% if(element.time!=null){ %>
    <tr href="/detail/<%=element._id%>">
      <th scope="row" class="left"><%=element.position%></th>
      <td><%=element.catagory%></td>
      <td><%=element.catagoryPosition%></td>
      <td><%=element.name%></td>
      <td><%=element.number%> </td>
      <td><%=element.time%>: <%=element.second%></td>
    </tr>
    <%}})%>
    <% array.forEach(function(element){%>
    <% if(element.time==null){ %>
    <tr href="/detail/<%=element._id%>">
      <th scope="row" class="left"><%=element.position%></th>
      <td><%=element.catagory%></td>
      <td><%=element.catagoryPosition%></td>
      <td><%=element.name%></td>
      <td><%=element.number%> </td>
      <td><%=element.time%>: <%=element.second%></td>
    </tr>
    <%}})%>
  </tbody>
</table>


